<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane mouseTransparent="false" prefHeight="400.0" prefWidth="500.0"
            xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
            fx:controller="ui.controllers.ControllerInput">
    <children>
        <VBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="NEVER">
                    <children>
                        <Label alignment="CENTER" text="Enter the port number: "/>
                    </children>
                    <padding>
                        <Insets fx:id="x1"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" padding="$x1" prefHeight="-1.0" prefWidth="-1.0"
                      VBox.vgrow="NEVER">
                    <children>
                        <TextField fx:id="mTextFieldInput" onAction="#handleTextFieldInput"
                                   prefWidth="200.0" HBox.hgrow="NEVER"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER" padding="$x1" prefHeight="-1.0" prefWidth="-1.0"
                      spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleButtonOK"
                                text="OK" HBox.hgrow="NEVER"/>
                        <Button mnemonicParsing="false"
                                onAction="#handleButtonCancel" text="EXIT" HBox.hgrow="NEVER"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
